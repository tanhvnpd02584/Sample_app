<% if @user.errors.any? %>
<div id="error_explanation">
  <div class="alert alert-danger">
   <%= t "the_form_contains" %>
   <%= t("error_param", count: @user.errors) %>.</div>
   <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
