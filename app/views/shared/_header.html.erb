<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("text_sample"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("text_home"), root_path %></li>
        <li><%= link_to t("text_help"), help_path %></li>
        <li><%= link_to t("text_signup"), new_user_path %></li>
        <% if logged_in? %>
          <li><%= link_to "Users", users_path %></li>
          <li><%= link_to t("text_loggin"), login_path %></li>
          <li class="dropdown">
          <%= link_to "#", class: "dropdown-toggle",
            data: {toggle: "dropdown"} do %>
            <%= t "text_account" %>
            <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <li><%= link_to t("text_profile"), current_user %></li>
            <li><%= link_to t("text_settings"), edit_user_patch_url(current_user) %></li>
            <li class="divider"></li>
            <li>
              <%= link_to t("text_logout"), logout_path, method: :delete %>
            </li>
          </ul>
        <% else %>
          <li><%= link_to t("text_loggin"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>

