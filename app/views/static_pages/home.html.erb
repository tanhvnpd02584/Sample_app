<% provide :title, t("text_home") %>
<% if logged_in? %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render "shared/user" %>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    <section class="stats">
    <section class="micropost_form">
      <%= render "shared/micropost_form" %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= t "microposts.text_micropost_feeded" %></h3>
  <%= render "shared/feed" %>
  </div>
</div>
<% else %>
<div class="center jumbotron">
  <%= t "users.index.link_html" %>
  <%= link_to t("text_sign"), new_user_path, class: "btn btn-lg btn-primary" %>
</div>
<% end %>

