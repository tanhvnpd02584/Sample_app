<% provide :title, t("text_signup") %>
<h2><%= t "text_signup" %></h2>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
    <%= render "shared/error_messages" %>
    <%= f.label t("users.index.name") %>
    <%= f.text_field :name, class: "form-control" %>
    <%= f.label t("users.index.email") %>
    <%= f.email_field :email, class: "form-control" %>
    <%= f.label t("users.index.password") %>
    <%= f.password_field :password, class: "form-control" %>
    <%= f.label t("users.index.confirmpassword") %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
    <%= f.submit t("text_button_account"), class: "btn btn-primary" %>
    <% end %>
</div>
</div>
